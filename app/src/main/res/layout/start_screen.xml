            android:id="@+id/startScreen_HelloWorldButton20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            />

        <Button
            android:id="@+id/startScreen_HelloWorldButton21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startScreen_HelloWorldButton22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            />

        <Button
            android:id="@+id/startScreen_HelloWorldButton23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            />

        <Button
            android:id="@+id/startScreen_HelloWorldButton24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DEL"
            />

        <Button
            android:id="@+id/startScreen_HelloWorldButton25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            />
    </LinearLayout>

</LinearLayout>